/* CUSTOM STORY STYLE */
.start-slide
  .logo-wrapper
    position absolute
    top 1rem
    left 2rem
    width 100px
    @media (max-width: 450px)
      left 1rem
      width 80px
    a
      border none
      img
        border none
  .intro__byline
    position absolute
    right 2rem
    top 1rem
    font-family $national
    font-size .9rem
    margin 0
    @media (max-width: 450px)
      width 120px
      text-align right
      right 1rem
      font-size .8rem

  .wrapper
    max-width 900px
    margin 0 auto
    display flex
    flex-direction column
    justify-content space-around
    height 100vh
    @media (max-width: 600px)
      justify-content center
    .text-wrapper
      @media (max-width: 920px)
        padding-top 3rem

  h1
    font-family 'Space Mono'
    font-size 100px
    width calc(100% - 25px)
    margin 0
    line-height 1
    @media (max-height: 700px)
      font-size 84px
    @media (max-width: 920px)
      font-size 84px
      margin 0 auto
    @media (max-width: 600px)
      font-size 72px
    @media (max-width: 470px), (max-height: 500px)
      font-size 60px
    @media (max-width: 400px)
      font-size 36px
  .med-text
    max-width 700px
    width 100%
    margin 0
    margin-top 4rem
    text-align left
    @media (max-width: 900px)
      width calc(100% - 25px)
      margin-left auto
      margin-right auto
      max-width none
    @media (max-width: 600px)
      font-size 1.5rem
      margin-bottom 1.5rem
    @media (max-width: 470px), (max-height: 500px)
      font-size 1.3rem
      margin-top 2rem

  .black-button
    margin 0
    @media (max-width: 900px)
      margin-left 12px

.black-button, .photo-submit
  font-size 1rem
  background-color #202034
  color white
  font-family $national
  padding 1rem
  font-weight 600
  text-transform uppercase
  letter-spacing 1px
  margin 0 auto
  margin-top 1rem
  @media (max-width: 500px), (max-height: 500px)
    font-size .8rem
    padding .7rem
.photo-submit
  padding 1rem 3rem
  margin-bottom 2rem

.photo-container
  margin 0 auto

.new-user
  display flex
  flex-direction column
  justify-content center
  height 100vh

.med-text
  color #FB431E
  font-family $national
  font-weight 600
  font-size 2rem
  line-height 1.4
  text-align center
  @media (max-width: 700px)
    font-size 1.75rem
    width calc(100% - 25px)
    margin-left auto
    margin-right auto
  @media (max-width: 470px), (max-height: 500px)
    font-size 1.2rem

.small-text
  font-family $national
  color #505050
  text-align center
  font-size 1rem
  margin 0 auto
  @media (max-width: 450px)
    width calc(100% - 25px)
    margin-left auto
    margin-right auto
  span
    display inline-block
    width 30px
    svg
      width 100%
      transform translateY(7px)

.swiper-wrapper
  .swiper-slide
    min-height 100vh
    height 100vh
    display flex
    flex-direction column
    justify-content space-around
    height 100vh


#age-slider, .photo-slider
  width calc(100% - 50px)
  max-width 600px
  margin 0 auto
  margin-top 5rem
  margin-bottom 5rem

.photo-slider
  margin-bottom 3rem
  @media (max-width: 600px)
    margin-top 2rem
    margin-bottom 1.5rem
.old-user
  display none

.photo-question
  justify-content center
  .photo-container
    max-width 600px
    padding 20px
    width calc(100% - 290px)
    box-shadow 0 0 9px 4px rgb(229,229,229,.55)
    @media (max-width: 650px)
      width calc(100% - 30px)
      padding 10px

.answer-key
  font-size .9rem
  position absolute
  left 1rem
  top 50%
  display none
  transform translateY(-50%)
  opacity 0
  font-family 'Space Mono'
  color #B6B6B6
  @media (max-width: 600px)
    position absolute
    margin 0 auto
    display flex
    top 0
    left 0
    right 0
    transform translate(0,0)
    justify-content center
    margin-top 1rem

  .row
    display flex
    margin-bottom .5rem
    .count
      font-size .9rem
      color #696969
      margin 0
      line-height 28px
      @media (max-width: 650px)
        display none
    .box
      border 1px solid #B6B6B6
      width 10px
      height 10px
      align-self center
      width 40px
      height 30px
      margin-right .5rem
    .filled-in
      text-align center
      background-color #E5E5E5
      color #565656
      font-size 14px
      line-height 28px
      font-family $national
    .active
      border 2px solid black

.noUi-pips
  padding 0
  height 30px
  top 0
  .noUi-value-horizontal
    top 17px
    position absolute
    transform translate(-50%,0)
    font-family $national
    color #202034
    font-size .8rem
    font-weight 600
  .noUi-marker-large
    background #202034
    width 1px
  .noUi-marker-normal
    background #E5E5E5
    width 1px
    height 10px

.noUi-target
  box-shadow none
  border none
  background none
.noUi-horizontal .noUi-handle
  height 55px
  width 55px
  top -18px
  box-shadow 0 0 9px 4px rgb(229,229,229,.75)

.noUi-handle
  background #FB431E
  font-family $national
  box-shadow none
  border none
  border-radius 50%
  border 3px solid white
  &:hover
    cursor grab
  &:before, &:after
    display none
  .noUi-tooltip
    color white
    border none
    transform translate(0,-50%)
    top 50%
    left 0
    right 0
    background none
    padding 0
    margin 0
    font-weight 900
    text-align center
    font-size 1.5rem
    line-height 1.5
    height 37px
.noUi-active
  cursor grabbing
  &:hover
    cursor grabbing

.photo-answer
  max-width 1000px
  margin 0 auto
  margin-bottom 5rem
  .photo-answer-row-wrapper
    .photo-answer-row
      display flex
      .photo-answer-slider-container
        width 1px
        flex-grow 1
        position relative
        height 130px
        .actual-bar
          width 2px
          height 100%
          background #bdbdbd
          position absolute
          top 0
          .actual-bar-info
            font-family $national
            font-size 12px
            position absolute
            top -7rem
            left 0
            right 0
            margin 0 auto
            transform translate(0,100%)
            width 120px
            p
              margin 0
              text-align center
              font-size 14px
              transform translate(-50%,0)
              color #111
              line-height 1.3
              text-shadow 0 0 0 white, -1px 0 0 white, 1px 1px 0 white, 1px -1px 0 white, 0 1px 0 white, 1px 0 0 white, -1px -1px 0 white, 0 -1px 0 white
              &:first-of-type
                font-weight 600
                color #222
                font-size 1rem

        .photo-answer-slider
          width 100%
          margin-top 50px
          .noUi-value-horizontal
            font-weight 300
          .dot-wrapper, .faded-dots-wrapper
            position absolute
            top 0
            left 0
            width 100%
            .faded-dot
              width 10px
              height 10px
              background #777777
              position absolute
              border-radius 50%
              opacity .5
              z-index 10
            .dot-big
              width 20px
              height 20px
              background $avgColor
              top -4px
              position absolute
              border-radius 50%
              box-shadow 0 0 9px 4px rgb(229,229,229,.55)
              border 2px solid white
              z-index 100000

              &:before
                content 'Avg.'
                font-family $national
                font-size 12px
                position absolute
                top -5px
                left 50%
                transform translate(-50%,-100%)

            .dot-you
              background #fb431e
              &:before
                content 'You'
                color #fb431e
                font-weight 600




          .noUi-handle
            display none
      &:first-of-type
        .photo-answer-slider-container
          padding-bottom 10rem
          height auto
    .photo-answer-text-wrapper
      width 200px
      font-family $national
      margin 0
      margin-right 2rem
      margin-left 2rem
      position relative
      &:first-of-type
        margin-bottom 1.5rem
      p
        margin 0
        font-size 1rem
        color #676767
        position relative
        .button
          position relative
          display inline-block
          padding-left 25px
          padding-right 8px
          background rgba(26,89,244,.14)
          font-weight 600
          text-transform uppercase
          font-size 12px
          border-radius 3px
          line-height 1.2rem
          color #1341b3
          border 1px solid rgba(26,89,244,.2)
          &:before
            content ''
            width 9px
            height 9px
            border-radius 4px
            position absolute
            left 4px
            top 3px
            background $avgColor
            border-radius 50%
            border 2px solid white
            transform translate(0,0)
        .you-button
          color #bf2200
          background-color rgba(251,68,29,.21)
          border-color rgba(251,68,29,.29)
          &:before
            background $youColor
        //span
          //font-weight 300
          //color black
        &:first-of-type
          margin-bottom 1.5rem

    .photo-answer-photo
      width 180px
      height 120px
      padding 10px
      box-shadow 0 0 9px 4px rgb(229,229,229,.55)
      margin-right 2rem
      background-size cover
      position relative
      &:before
        content 'Black and White'
        position absolute
        top -5px
        left 0
        font-family $national
        text-align center
        width 100%
        transform translate(0,-100%)
        font-size .8rem
        font-weight 600
    .color-version
      &:before
        content 'Color'
  .photo-answer-title-wrapper
    display flex
    justify-content space-between
    border-bottom 2px solid #E5E5E5
    margin-bottom 2.5rem
    padding-bottom .5rem
    .photo-answer-title
      font-family 'Space Mono'
      margin 0
      font-weight 600
      padding-left calc(200px + 4rem)
    .photo-answer-key
      display flex
      align-self center
      .photo-answer-key-box
        border 2px solid #e5e5e5
        width 20px
        height 15px
        margin-right 5px
      .photo-answer-key-box-active
        border 2px solid #222





