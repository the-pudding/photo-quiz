/* CUSTOM STORY STYLE */
.start-slide
  .logo-wrapper
    position absolute
    top 1rem
    left 2rem
    width 100px
    @media (max-width: 450px)
      left 1rem
    a
      border none
      img
        border none
  .intro__byline
    position absolute
    right 2rem
    top 1rem
    font-family $national
    font-size .9rem
    margin 0
    @media (max-width: 450px)
      width 120px
      text-align right
      right 1rem
  .wrapper
    max-width 900px
    margin 0 auto
    display flex
    flex-direction column
    justify-content space-around
    height 100vh
    .text-wrapper
      @media (max-width: 920px)
        padding-top 3rem

  h1
    font-family 'Space Mono'
    font-size 100px
    width calc(100% - 25px)
    margin 0
    line-height 1
    @media (max-width: 920px)
      font-size 84px
      margin 0 auto
    @media (max-width: 600px)
      font-size 72px
    @media (max-width: 470px)
      font-size 60px
  .med-text
    max-width 700px
    width 100%
    margin 0
    margin-top 4rem
    text-align left
    @media (max-width: 900px)
      width calc(100% - 25px)
      margin-left auto
      margin-right auto
      max-width none
    @media (max-width: 700px)
      font-size 1.5rem
  .black-button
    margin 0
    margin-left 12.5px

.black-button, .photo-submit
  font-size 1rem
  background-color #202034
  color white
  font-family $national
  padding 1rem
  font-weight 600
  text-transform uppercase
  letter-spacing 1px
  margin 0 auto
  margin-top 1rem
.photo-submit
  padding 1rem 3rem

.photo-container
  margin 0 auto

.new-user
  display flex
  flex-direction column
  justify-content center
  height 100vh

.med-text
  color #FB431E
  font-family $national
  font-weight 600
  font-size 2rem
  line-height 1.4
  text-align center
  @media (max-width: 700px)
    font-size 1.75rem
    width calc(100% - 25px)
    margin-left auto
    margin-right auto

  @media (max-width: 450px)
    font-size 1.5rem

.small-text
  font-family $national
  color #B6B6B6
  text-align center
  font-size 1rem
  margin 0 auto
  @media (max-width: 450px)
    width calc(100% - 25px)
    margin-left auto
    margin-right auto
  span
    display inline-block
    width 30px
    svg
      width 100%
      transform translateY(7px)

.swiper-slide
  min-height 100vh
  height 100vh
  display flex
  flex-direction column
  justify-content space-around
  height 100vh


#age-slider, .photo-slider
  width 90%
  max-width 600px
  margin 0 auto
  margin-top 5rem
  margin-bottom 5rem

.photo-slider
  margin-bottom 3rem
.old-user
  display none

.photo-question
  justify-content center
  .photo-container
    max-width 600px
    padding 20px
    box-shadow 0 0 9px 4px rgb(229,229,229,.55)
    @media (max-width: 650px)
      width calc(100% - 100px)
      padding 10px
      margin-left 75px

.answer-key
  font-size .9rem
  position absolute
  left 1rem
  top 50%
  display none
  transform translateY(-50%)
  opacity 0
  font-family 'Space Mono'
  color #B6B6B6
  .row
    display flex
    margin-bottom .5rem
    .count
      font-size .9rem
      color #696969
      margin 0
      line-height 28px
      @media (max-width: 650px)
        display none
    .box
      border 1px solid #B6B6B6
      width 10px
      height 10px
      align-self center
      width 40px
      height 30px
      margin-right .5rem
    .filled-in
      text-align center
      background-color #E5E5E5
      color #565656
      font-size 14px
      line-height 28px
      font-family $national
    .active
      border 2px solid black

.noUi-pips
  padding 0
  height 30px
  top 0
  .noUi-value-horizontal
    top 17px
    position absolute
    transform translate(-50%,0)
    font-family $national
    color #202034
    font-size .8rem
  .noUi-marker-large
    background #202034
    width 1px
  .noUi-marker-normal
    background #E5E5E5
    width 1px
    height 10px

.noUi-target
  box-shadow none
  border none
  background none
.noUi-horizontal .noUi-handle
  height 55px
  width 55px
  top -18px
  box-shadow 0 0 9px 4px rgb(229,229,229,.75)

.noUi-handle
  background #FB431E
  font-family $national
  box-shadow none
  border none
  border-radius 50%
  border 3px solid white
  &:hover
    cursor grab
  &:before, &:after
    display none
  .noUi-tooltip
    color white
    border none
    transform translate(0,-50%)
    top 50%
    left 0
    right 0
    background none
    padding 0
    margin 0
    font-weight 900
    text-align center
    font-size 1.5rem
    line-height 1.5
    height 37px
.noUi-active
  cursor grabbing
  &:hover
    cursor grabbing
